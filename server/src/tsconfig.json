{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "../dist",
		"rootDir": ".",
		"sourceMap": true,
		"noImplicitAny": false,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node"
	},
	"exclude": [
		"node_modules",
		"typings",
		".npm",
		"server/dist",
		"client/dist"
	],
	"awesomeTypescriptLoaderOptions": {
		"forkChecker": true,
		"useWebpackText": true
	}
}
